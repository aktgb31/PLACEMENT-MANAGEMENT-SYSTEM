<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>RegisterStudent</servlet-name>
        <servlet-class>app.RegisterStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterStudent</servlet-name>
        <url-pattern>/RegisterStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginStudent</servlet-name>
        <servlet-class>app.LoginStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginStudent</servlet-name>
        <url-pattern>/LoginStudent</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetCompanies</servlet-name>
        <servlet-class>app.ShowCompaniesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCompanies</servlet-name>
        <url-pattern>/GetCompanies</url-pattern>
    </servlet-mapping>
</web-app>